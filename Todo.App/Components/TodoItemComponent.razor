@using Todo.Models
<li class="list-group-item">
    <span><input type="checkbox"  onchange="@OnItemDoneUnDone.InvokeAsync()"/> @Item.Label <a href="/TodoItem/@Item.Id">Detail</a></span>
</li>

@code{

    [Parameter, EditorRequired]
    public TodoItem Item { get; set; }

    [Parameter]
    public EventCallback OnItemDoneUnDone { get; set; }
    
}
