@page "/"
@using Todo.Components
<div class="card m-auto mt-5" style="width: 30rem;">
    <div class="card-header  justify-content-between  text-primary fw-bold">
        Mes t√¢ches
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            @TodoList.Count
        </span>
        <span class="badge badge-primary"></span>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in TodoList.Items)
        {
            <TodoItemComponent Item="@item"></TodoItemComponent>
        }
        <li class="list-group-item">
            <div class="input-group mb-3">
                <input type="text" class="form-control" @bind="_newItem"/>
                <div class="input-group-append"> &nbsp;
                    <button type="button" class="btn btn-outline-secondary cursor-pointer"
                            @onclick="AddItem">
                        Ajouter
                    </button>
                </div>
            </div>
        </li>
    </ul>  
    <div  style="text-align: right">
        <img  class="droptarget" src="images/trash_icon.png" width="48"/> 
    </div> 
     
    
</div>